<?xml version="1.0" encoding="UTF-8"?>
<?xml-stylesheet type="text/xsl" href="configuration.xsl"?>

<configuration>

<!--副本数量-->
<property>
	<name>dfs.replication</name>
	<value>3</value>
</property>

<!--设置hdfs的块大小-->
<property>
	<name>dfs.blocksize</name>
	<value>134217728</value>
</property>

<!--配置hdfs的元数据的存放目录-->
<property>
	<name>dfs.namenode.name.dir</name>
	<value>file:///home/hadoop/develop_env/hadoop-2.7.1/hadoopdata/dfs/name</value>
</property>

<!--配置hdfs的数据的存放目录-->
<property>
	<name>dfs.datanode.data.dir</name>
	<value>file:///home/hadoop/develop_env/hadoop-2.7.1/hadoopdata/dfs/data</value>
</property>

<!--配置hdfs的checkpoint的存放目录-->
<property>
	<name>fs.checkpoint.dir</name>
	<value>file:///home/hadoop/develop_env/hadoop-2.7.1/hadoopdata/checkpoint/dfs/cname</value>
</property>

<!--配置hdfs的操作日志的存放目录-->
<property>
	<name>fs.checkpoint.edits.dir</name>
	<value>file:///home/hadoop/develop_env/hadoop-2.7.1/hadoopdata/checkpoint/dfs/cname</value>
</property>

<!--NN的web ui的通讯地址-->
<property>
	<name>dfs.http.address</name>
	<value>hadoop01:50070</value>
</property>

<!--SNN的web ui的通讯地址-->
<property>
	<name>dfs.secondary.http.address</name>
	<value>hadoop01:50090</value>
</property>

<!--是否启用rest api访问hdfs-->
<property>
	<name>dfs.webhdfs.enabled</name>
	<value>true</value>
</property>

<!--是否启用文件系统的权限-->
<property>
	<name>dfs.permissions</name>
	<value>false</value>
</property>

</configuration>
